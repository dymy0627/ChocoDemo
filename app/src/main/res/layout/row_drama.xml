<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/drama_thumb"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drama_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/drama_thumb" />

    <TextView
        android:id="@+id/drama_rating_textView"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:text="@string/rating"
        app:layout_constraintTop_toBottomOf="@id/drama_name"
        app:layout_constraintStart_toStartOf="@id/drama_name" />

    <TextView
        android:id="@+id/drama_rating_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/none"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/drama_rating_textView"
        app:layout_constraintStart_toEndOf="@id/drama_rating_textView" />

    <TextView
        android:id="@+id/drama_createdAt_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/created_at"
        app:layout_constraintTop_toBottomOf="@id/drama_rating_textView"
        app:layout_constraintStart_toStartOf="@id/drama_rating_textView" />

    <TextView
        android:id="@+id/drama_createdAt_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/none"
        app:layout_constraintTop_toTopOf="@id/drama_createdAt_textView"
        app:layout_constraintStart_toEndOf="@id/drama_createdAt_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>

